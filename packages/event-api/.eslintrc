{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "extends": [
    "airbnb",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "import"
  ],
  "rules": {
    "prettier/prettier": "error",
    "import/order": [
      "error", {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ]
      }
    ],
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": [
          "test/**",
          "packages/**/test/**",
          "packages/**/*.test.js"
        ],
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ]
  }
}